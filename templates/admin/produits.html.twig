{% extends "base.html.twig" %} 

{% block title %}GESTIONS DES PRODUITS{% endblock %}

{% block body %}

    <div class="container my-5">

        <h2 class="text-center text-white bg-primary mx-auto my-2">Tous les produits enregistr√©s en base</h2>

        <div class="row justify-content-center">
            <a href="{{ path("app_produit_ajouter")}}" class="btn btn-primary col-md-5 mx-auto">Ajouter un produit</a>
        </div>

        <table class="table table-striped table-responsive-sm col-md-7 col-lg-5">
            <thead class=''>
                <tr class='text-center'>
                    {% for col in colonnes %}

                        {% if col != 'id' %}

                        <th>{{col}}</th>

                        {% endif %}

                    {% endfor %}
                        <th>ACTION</th>    
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                <tr class="text-center">
                    <td class="align-middle">{{produit.nom}}</td>
                    <td class="align-middle">{{produit.description}}</td>
                    <td class="align-middle">{{produit.prix}}</td>
                    <td class="align-middle"><img class="img-fluid" src="{{produit.image}}" alt="{{produit.nom}}"></td>
                    <td class="align-middle">{{produit.stock}}</td>
                    <td class="align-middle gap-1">
                        <a href="{{ path('app_produit_editer', {'id' : produit.id }) }}" class="text-center bg-warning text-white p-2 rounded"><i class="fa-solid fa-pen"> </i></a>
                        <a href="{{ path('app_produit_supp', {'id' : produit.id }) }}" class="text-center bg-danger text-white p-2 rounded"><i class="fa-solid fa-trash"> </i></a>
                        <a href="{{path('app_detail_produit', { 'id' : produit.id })}}" class="text-center bg-info text-white p-2 rounded"><i class="fa-solid fa-eye"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        

    </div>

 

{% endblock %}